<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edu_degree"
                style="@style/Text"
                android:layout_weight="1"
                android:text="Engineering"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

            <ImageButton
                android:id="@+id/edu_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit" />

            <ImageButton
                android:id="@+id/edu_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="20dp"
                android:background="@drawable/delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edu_stream"
                style="@style/Text"
                android:text="(Computer Engineering)"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <TextView
                android:id="@+id/edu_inst"
                style="@style/Text"
                android:text="VGEC"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

            <TextView
                android:id="@+id/edu_date"
                style="@style/Text"
                android:text="From:21-08-2018 To: 21-5-2021"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
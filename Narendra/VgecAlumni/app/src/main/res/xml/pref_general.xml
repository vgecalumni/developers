<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory android:title="Account Details">
        <EditTextPreference
            android:capitalize="words"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:inputType="none"
            android:key="account"
            android:linksClickable="false"
            android:longClickable="false"
            android:maxLines="1"
            android:selectAllOnFocus="false"
            android:selectable="false"
            android:singleLine="true"
            android:title="Account Type" />

        <EditTextPreference
            android:capitalize="words"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:inputType="textCapWords"
            android:key="uname"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:selectable="false"
            android:singleLine="true"
            android:title="Account ID" />


        <EditTextPreference
            android:capitalize="words"
            android:clickable="false"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textCapWords"
            android:key="name"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:selectable="false"
            android:singleLine="true"
            android:title="Name" />
    </PreferenceCategory>


    <PreferenceCategory android:title="App Permissions">
        <EditTextPreference
            android:capitalize="words"
            android:clickable="false"
            android:defaultValue="For storing and uploading images in sharing platform and other contents like resume for jobs"
            android:editable="false"
            android:focusable="false"
            android:inputType="textCapWords"
            android:key="storage"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:selectable="false"
            android:singleLine="true"
            android:title="Storage Permission" />

        <EditTextPreference
            android:capitalize="words"
            android:clickable="false"
            android:defaultValue="To capture and share photos from both front and rear camera"
            android:editable="false"
            android:focusable="false"
            android:inputType="textCapWords"
            android:key="camera"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:selectable="false"
            android:singleLine="true"
            android:title="Camera Permission" />
    </PreferenceCategory>


</PreferenceScreen>

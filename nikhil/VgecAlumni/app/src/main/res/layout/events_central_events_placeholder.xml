<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#dddddd"/>

            <View
                android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_below="@id/v1"
                android:background="#dddddd" />

            <View
                android:id="@+id/date1"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc1"
                android:background="#dddddd" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/date1"
                android:background="#dddddd"/>

            <View
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_below="@id/v2"
                android:background="#dddddd" />

            <View
                android:id="@+id/date2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc2"
                android:background="#dddddd" />

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/date2"
                android:background="#dddddd"/>

            <View
                android:id="@+id/desc3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_below="@id/v3"
                android:background="#dddddd" />

            <View
                android:id="@+id/date3"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc3"
                android:background="#dddddd" />

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/date3"
                android:background="#dddddd"/>

            <View
                android:id="@+id/desc4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_below="@id/v4"
                android:background="#dddddd" />

            <View
                android:id="@+id/date4"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc4"
                android:background="#dddddd" />

            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/date4"
                android:background="#dddddd"/>

            <View
                android:id="@+id/desc5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_below="@id/v5"
                android:background="#dddddd" />

            <View
                android:id="@+id/date5"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/desc5"
                android:background="#dddddd" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>